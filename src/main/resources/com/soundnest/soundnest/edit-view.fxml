<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="edit-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soundnest.soundnest.Controllers.EditController">
    <stylesheets>
        <URL value="@CSSs/edit-view.css" />
    </stylesheets>
    <children>
        <Label layoutX="200.0" layoutY="20.0" styleClass="header-label" text="Edit Entry" />

        <Label layoutX="100.0" layoutY="80.0" text="Name:" />
        <TextField fx:id="inputName" layoutX="200.0" layoutY="75.0" prefWidth="200.0" />

        <Label layoutX="100.0" layoutY="130.0" text="Email:" />
        <TextField fx:id="inputEmail" layoutX="200.0" layoutY="125.0" prefWidth="200.0" />

        <Label layoutX="100.0" layoutY="180.0" text="Password:" />
        <TextField fx:id="inputPassword" layoutX="200.0" layoutY="175.0" prefWidth="200.0" />

        <Button fx:id="saveButton" layoutX="343.0" layoutY="250.0" mnemonicParsing="false" onMouseClicked="#onSaveButtonClick" prefHeight="42.0" prefWidth="77.0" styleClass="save-button" text="SAVE" />
        <Button fx:id="cancelButton" layoutX="200.0" layoutY="250.0" mnemonicParsing="false" onMouseClicked="#onCancelButtonClick" styleClass="cancel-button" text="CANCEL" />
    </children>
</AnchorPane>
