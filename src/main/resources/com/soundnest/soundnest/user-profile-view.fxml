<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soundnest.soundnest.Controllers.UserProfileController">
    <stylesheets>
        <URL value="@CSSs/UserProfileView.css" />
    </stylesheets>
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Edit Profile" styleClass="header-label" />

        <Label layoutX="100.0" layoutY="80.0" text="Username:" styleClass="label" />
        <TextField fx:id="usernameField" layoutX="200.0" layoutY="75.0" prefWidth="300.0" styleClass="input-field" />

        <Label layoutX="100.0" layoutY="130.0" text="Email:" styleClass="label" />
        <TextField fx:id="emailField" layoutX="200.0" layoutY="125.0" prefWidth="300.0" styleClass="input-field" />

        <Label layoutX="100.0" layoutY="180.0" text="Password:" styleClass="label" />
        <TextField fx:id="passwordField" layoutX="200.0" layoutY="175.0" prefWidth="300.0" styleClass="input-field" />

        <Button text="Save Changes" fx:id="saveButton" layoutX="250.0" layoutY="250.0" styleClass="save-button" onMouseClicked="#onSaveButtonClick" />

        <Button text="Back" fx:id="backButton" layoutX="150.0" layoutY="250.0" styleClass="back-button" onMouseClicked="#onBackClick" />
    </children>
</AnchorPane>
