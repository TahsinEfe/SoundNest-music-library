<AnchorPane prefHeight="384.0" prefWidth="608.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soundnest.soundnest.Controllers.AdminLoginController">
    <children>
        <VBox layoutX="387.0" layoutY="2.0" prefHeight="384.0" prefWidth="542.0" spacing="10">
            <Label prefHeight="35.0" prefWidth="302.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Sound-Nest Music Library">
                <VBox.margin>
                    <Insets left="120.0" top="12.0" />
                </VBox.margin></Label>
            <TextField fx:id="adminNameField" promptText="AdminName">
                <VBox.margin>
                    <Insets bottom="5.0" left="120.0" right="120.0" top="50.0" />
                </VBox.margin>
            </TextField>
            <PasswordField fx:id="adminPasswordField" prefHeight="26.0" prefWidth="248.0" promptText="AdminPassword">
                <VBox.margin>
                    <Insets bottom="5.0" left="120.0" right="120.0" top="5.0" />
                </VBox.margin></PasswordField>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnLogin" alignment="CENTER" onMouseClicked="#onLoginClick" prefHeight="38.0" prefWidth="64.0" style="-fx-background-color: #001B2C;" text="Login" textAlignment="CENTER" textFill="WHITE" />
            </HBox>
            <HBox spacing="10">
                <Hyperlink fx:id="userLoginLink" onMouseClicked="#onUserLoginClick" text="User Login">
                    <HBox.margin>
                        <Insets left="160.0" right="40.0" />
                    </HBox.margin></Hyperlink>
                <Hyperlink fx:id="artistLoginLink" onMouseClicked="#onArtistLoginClick" prefHeight="24.0" prefWidth="93.0" text="Artist Login" />
            </HBox>
        </VBox>
        <ImageView fitHeight="388.0" fitWidth="495.0" layoutX="-1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/image.png" />
            </image>
        </ImageView>
        <FontAwesomeIconView glyphName="PERSON" layoutX="488.0" layoutY="126.0" />
        <FontAwesomeIconView glyphName="LOCK" layoutX="488.0" layoutY="174.0" />
    </children>
</AnchorPane>
