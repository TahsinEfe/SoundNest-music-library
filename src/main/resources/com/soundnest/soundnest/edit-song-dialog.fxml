<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soundnest.soundnest.Controllers.EditSongDialogController">
    <stylesheets>
        <URL value="@CSSs/EditSongDialog.css" />
    </stylesheets>
    <children>

        <Label layoutX="20.0" layoutY="20.0" text="Edit Song Details" styleClass="header-label" />

        <Label layoutX="20.0" layoutY="60.0" text="Playlist:" styleClass="input-label" />
        <ComboBox fx:id="playlistComboBox" layoutX="120.0" layoutY="55.0" prefWidth="250.0" onMouseClicked="#onComboBoxClicked"/>

        <Label layoutX="20.0" layoutY="100.0" text="Song Name:" styleClass="input-label" />
        <TextField fx:id="songNameField" layoutX="120.0" layoutY="95.0" prefWidth="250.0" />

        <Label layoutX="20.0" layoutY="140.0" text="Song Link:" styleClass="input-label" />
        <TextField fx:id="songLinkField" layoutX="120.0" layoutY="135.0" prefWidth="250.0" />

        <Button fx:id="saveButton" layoutX="150.0" layoutY="200.0" text="Save" onMouseClicked="#onSaveButtonClick" styleClass="save-button" />
    </children>
</AnchorPane>
