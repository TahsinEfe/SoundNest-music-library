<AnchorPane prefHeight="384.0" prefWidth="608.0" stylesheets="@CSSs/user-register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soundnest.soundnest.Controllers.UserRegistrationController">
    <children>
        <VBox layoutX="386.0" layoutY="1.0" prefHeight="384.0" prefWidth="542.0" spacing="10">
