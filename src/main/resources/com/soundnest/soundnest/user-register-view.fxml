            </padding>
            <VBox.margin>
                <Insets left="230.0" />
            </VBox.margin>
        </VBox>
        <ImageView fitHeight="388.0" fitWidth="495.0" layoutX="-1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/image.png" />
