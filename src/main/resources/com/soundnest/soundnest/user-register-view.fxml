                <VBox.margin>
                    <Insets left="120.0" top="12.0" />
                </VBox.margin></Label>
            <TextField fx:id="usernameField" promptText="CreateUserName">
                <VBox.margin>
                    <Insets bottom="5.0" left="120.0" right="120.0" top="50.0" />
                </VBox.margin></TextField>
            <TextField fx:id="emailField" promptText="CreateEmail">
                <VBox.margin>
                    <Insets bottom="5.0" left="120.0" right="120.0" top="5.0" />
                </VBox.margin></TextField>
            <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="248.0" promptText="CreatePassword">
